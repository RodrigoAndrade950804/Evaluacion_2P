<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppChistes.Views.AboutPage"
             Title="AboutPage">
    <VerticalStackLayout
        Padding="20"
        Spacing="30">

        <Label 
            Text="Acerca de la aplicación"
            FontSize="24"
            HorizontalOptions="Center" />

        <Grid
            RowDefinitions="*,*"
            ColumnDefinitions="*,*"
            Padding="10"
            ColumnSpacing="10"
            RowSpacing="10"
            HeightRequest="250">

            <BoxView 
                Grid.Row="0" 
                Grid.Column="0" 
                Color="Red" />
            <BoxView 
                Grid.Row="0" 
                Grid.Column="1" 
                Color="Green" />
            <BoxView 
                Grid.Row="1" 
                Grid.Column="0" 
                Color="Blue" />
            <BoxView 
                Grid.Row="1" 
                Grid.Column="1" 
                Color="Yellow" />

            <StackLayout Grid.Row="0" Grid.Column="0" VerticalOptions="Center" HorizontalOptions="Center">
                <Label Text="Nombre:" FontAttributes="Bold" />
                <Label Text="Rodrigo" />
            </StackLayout>

            <StackLayout Grid.Row="0" Grid.Column="1" VerticalOptions="Center" HorizontalOptions="Center">
                <Label Text="Fecha de nacimiento:" FontAttributes="Bold" />
                <Label Text="04/08/1995" />
            </StackLayout>

            <StackLayout Grid.Row="1" Grid.Column="0" VerticalOptions="Center" HorizontalOptions="Center">
                <Label Text="Hobbies:" FontAttributes="Bold" />
                <Label Text="Nadar, Jugar" />
            </StackLayout>

            <StackLayout Grid.Row="1" Grid.Column="1" VerticalOptions="Center" HorizontalOptions="Center">
                <Label Text="Versión:" FontAttributes="Bold" TextColor="Black" />
                <Label Text="0.3" TextColor="Black"/>
            </StackLayout>
        </Grid>

        <Button
            x:Name="RegresarAMainPage"
            Text="Regresar a MainPage"
            Clicked="RegresarAMainPage_Clicked"
            HorizontalOptions="Center"
            BackgroundColor="#2196F3"
            TextColor="White"/>
    </VerticalStackLayout>
</ContentPage>